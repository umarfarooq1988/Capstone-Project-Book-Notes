<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <!-- Main container -->
    <div class="box">

        <div class="add-new-book-section">
            <h1 class="newheading">Add A New Book</h1>


            <div class="book-form">
                <form class="edit-form" action="/add" method="post">

                    <input class="input-field titlename" type="text" name="newTitle" placeholder="Title">
                    <textarea class="search btn btn-light" name="newDescription" placeholder="Description"
                        autocomplete="off"></textarea>
                    <input class="input-field liner" type="text" name="newIsbn" placeholder="Book ISBN"
                        autocomplete="off">
                    <input class="input-field liner" type="text" name="newRating" placeholder="Rating"
                        autocomplete="off">

                    <button class="btn submit-btn liner" type="submit" name="list">Submit</button>
                </form>
            </div>
        </div>

        <!-- Container for List of Books -->
        <div class="container">

            <h1 class="newheading">List of Books</h1>

            <ol>

                <% for (let book of bookItems) { %>
                    <div class="abook">

                        <div class="book-details">
                            <!-- Left side: Book Image -->
                            <div class="book-image">
                                <!-- Book Cover Image -->
                                <img class="cover" src="https://covers.openlibrary.org/b/isbn/<%=book.isbn%>-M.jpg"
                                    alt="Book Cover of <%=book.title%>"
                                    onerror="this.onerror=null;this.src='/path/to/placeholder.jpg'; this.alt='No Cover Available'" />
                            </div>

                            <!-- Right side: Description, Rating, Delete, Edit -->
                            <div class="book-info">

                                <h2>
                                    <%=book.title%>
                                </h2>

                                <p class="book-description">
                                    <%=book.description%>
                                </p>

                                <p class="rating" name="newRating">Rating: <%=book.rating%>
                                </p>

                                <form action="/delete" method="post" class="delete-form">
                                    <input type="hidden" name="isbn" value="<%= book.isbn %>">
                                    <button class="delete-btn" type="submit" name="delete">Delete</button>
                                </form>

                                <form action="/edit" method="get" class="edit-form">
                                    <input type="hidden" name="isbn" value="<%= book.isbn %>">
                                    <button class="edit-btn" type="submit">Edit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </ol>
        </div>
    </div>
</body>

</html>